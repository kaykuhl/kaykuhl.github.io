<div class="container">

<div class="row">
<div class="col-md-12"><h1>Eat-Da-Burger</h1><br><img class="burger-img" src="/assets/images/burger.png"></div>  
</div>

<div class="row">
  <div class="col-md-12">
<h2 id="add-burger">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
    <button type="submit">Add Burger</button>
  </div>
</form>
</div>
</div>

<br>

<div class="row">
<div class="col-md-6">
<h2>Burgers to be Eaten</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        <h3>{{this.burger_name}}
        <button class="devoured btn" data-id="{{id}}" data-devoured="{{devoured}}">EAT!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class="col-md-6">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
           <li>
        <h3>{{this.burger_name}}
  	<button class="delete-burger btn" data-id="{{id}}">DELETE!</button></h3>
      </li>
    {{/if}}
  {{/each}}
</ul> 

</div>
</div>

</div>


